<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#49A5F6"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-39dp"
        tools:layout_editor_absoluteY="93dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/recipekorea"
            android:text="VTrapist"
            android:textSize="50dp"
            android:textColor="#ffffff"/>

        <TableLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ffffff">

            <TableRow
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/recipekorea"
                    android:paddingLeft="20dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editTxt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/recipekorea" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/recipekorea"
                    android:paddingLeft="20dp"
                    android:text="Age" />

                <EditText
                    android:id="@+id/editTxt_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/recipekorea" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/recipekorea"
                    android:paddingLeft="20dp"
                    android:text="Gender" />

                <EditText
                    android:id="@+id/editTxt_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/recipekorea" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txtView_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/recipekorea"
                    android:paddingLeft="20dp"
                    android:text="Type" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/recipekorea"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txtView_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/recipekorea"
                    android:paddingLeft="20dp"
                    android:text="Level of Depression" />

                <Spinner
                    android:id="@+id/spinner_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/recipekorea"></Spinner>
            </TableRow>

            <TextView
                android:id="@+id/txtView_medical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/recipekorea"
                android:paddingLeft="20dp"
                android:text="Medical History" />

            <EditText
                android:id="@+id/editTxt_medical"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/recipekorea" />

        </TableLayout>


        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#49A5F6"
            android:fontFamily="@font/recipekorea"
            android:stateListAnimator="@null"
            android:text="Sign up"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>